@model Construx.App.Dtos.Representative.CreateRepresentativeDto
@using Construx.App.Constants;
@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Representative</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IDNP" class="control-label"></label>
                    <input asp-for="IDNP" class="form-control" />
                    <span asp-validation-for="IDNP" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle" class="control-label"></label>
                    <input asp-for="JobTitle" class="form-control" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="CompanyExists" /> @Html.DisplayNameFor(model => model.CompanyExists)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label"> Please Upload Proof of Identification </label>
                    <input type="file" name="fileIdProof" required accept="image/*" />
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label"> Please Upload Proof of Identification </label>
                    <input type="file" name="fileWorkProof" required accept="image/*" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-action="Create" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>