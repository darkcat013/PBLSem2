@{
    ViewData["Title"] = "Home Page";
}

<div class="row mb-5">

    <div class="col-12 d-flex justify-content-center align-items-center">

        <div class="p-3">
            <img src="~/uploaded/icons/ConstruX_transp.png" style="height: 90px" />
        </div>

        <div class="">
            <h1 class="display-4 m-0">Welcome!</h1>
        </div>
    </div>
</div>

<!--carousel-->

<div class="d-flex justify-content-center mb-5">
    <div id="carousel" class="carousel slide" data-ride="carousel" style="width:900px; height: 450px;">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/uploaded/icons/carousel-1.jpg" class="d-block w-100" alt="First slide!" />
                <div class="carousel-caption">
                    <h3>
                        Learn to plan ahead with us.
                    </h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/uploaded/icons/carousel-2.jpg" class="d-block w-100" alt="Second slide!" />
                <div class="carousel-caption">
                    <h3>
                        See your dream home come true.
                    </h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/uploaded/icons/carousel-3.png" class="d-block w-100" alt="Third slide!" />
                <div class="carousel-caption">
                    <h3>
                        Find the best companies and people to work with.
                    </h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/uploaded/icons/carousel-4.jpg" class="d-block w-100" alt="Fourth slide!" />
                <div class="carousel-caption">
                    <h3>
                        Make your designs come to life.
                    </h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/uploaded/icons/carousel-5.jpg" class="d-block w-100" alt="Fifth slide!" />
                <div class="carousel-caption">
                    <h3>
                        Get help in maintaining your dream home.
                    </h3>
                </div>
            </div>

            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

