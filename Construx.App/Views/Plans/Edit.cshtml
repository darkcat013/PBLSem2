@model Construx.App.Domain.Entities.Plan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plan</h4>
<hr />

<div class="row">

    <div class="col-md-6">
        <h2>Edit Plan</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h2>Add Plan Part</h2>
        <form method="post" asp-action="CreatePlanPart" class="input-group d-flex flex-column">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label">Name</label>
                <input class="form-control" name="name" type="text" />
            </div>

            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea class="form-control d-inline-block" name="description" type="text"></textarea>
            </div>

            <div class="form-group">
                <label class="control-label">From Date</label>
                <input type="date" name="fromDate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">To Date</label>
                <input type="date" name="toDate" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Priority</label>
                <input class="form-control" name="priority" type="number" />
            </div>

            <div class="form-group">
                <label class="control-label">Status</label>
                <select class="form-control" name="planPartStatusId" asp-items="@ViewBag.PlanPartStatuses"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Plan Part" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}